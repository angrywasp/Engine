{
    "files.exclude": {
        "**/*.csproj.user": true,
        "**/*.userprefs": true,
        //"**/bin": true,
        "**/packages": true,
        "**/*.tar.xz": true,
        //"**/*.old": true,
        "**/obj": true,
    },
    "files.associations": {
        "*.macro": "csharp",
        "*.config": "json",
        "*.material": "json",
        "*.physics": "json",
        "*.type": "json",
        "*.map": "json"
    },
    "omnisharp.projectLoadTimeout": 360,
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    
    "clang-format.executable": "clang-format",
    "clang-format.language.glsl.enable": true,
    "clang-format.language.glsl.style": "Microsoft"
}   
